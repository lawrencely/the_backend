<%= form_tag '/login' do %>
<div class="container-fluid">
    <%= label_tag :username %>
    <%= text_field_tag :username, nil, :autofocus => true, class: "form-control" %>
<br>
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, class: "form-control" %>
<br>
    <%= submit_tag 'Login', class: "btn btn-success"%>
</div>
<% end %>
