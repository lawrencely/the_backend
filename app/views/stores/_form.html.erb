<div class="store-form-div">
<%= form_for(:store, :url => {:controller => 'stores', :action => 'create'}) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
<br>
  <%= f.label :description %>
  <%= f.text_field :description, class: "form-control" %>
<br>
  <%= f.submit :Create, class: "btn btn-primary"  %>

<% end %>
</div>